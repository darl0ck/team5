{
  "name": "team5",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "precommit": "npm test",
    "prepush": "npm test",
    "lint": "eslint .",
    "test": "npm run lint",
    "jstest": "mocha **/test/*.spec.js",
    "build": "next build",
    "start": "node ./server/index.js",
    "deploy": "now --token $NOW_TOKEN --public",
    "alias": "now alias the-best-messenger.now.sh --token=$NOW_TOKEN"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "body-parser": "1.18.2",
    "casual": "^1.5.19",
    "config": "^1.30.0",
    "cookie-parser": "1.4.3",
    "create-react-app": "^1.5.2",
    "express": "^4.16.3",
    "express-session": "1.15.6",
    "html-to-utf8": "^0.1.0",
    "js-md5": "^0.7.3",
    "metascraper": "^3.10.4",
    "mocha": "^5.1.0",
    "next": "^5.1.0",
    "passport": "0.4.0",
    "passport-github": "1.1.0",
    "react": "^16.3.0",
    "react-chat-elements": "^0.9.0",
    "react-dom": "^16.3.1",
    "react-modal": "^3.3.2",
    "request": "^2.83.0",
    "socket.io": "^2.1.0",
    "socket.io-client": "^2.1.0",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.2",
    "eslint": "^4.19.1",
    "eslint-config-hrundel": "1.3.0",
    "eslint-plugin-react": "^7.7.0",
    "husky": "^0.14.3",
    "webpack": "^4.4.1"
  },
  "now": {
    "name": "the-best-messenger",
    "alias": "https://the-best-messenger.now.sh",
    "env": {
      "NODE_ENV": "production",
      "GITHUB_CLIENT_ID": "@client-id",
      "GITHUB_CLIENT_SECRET": "@client-secret",
      "EXPRESS_SESSION_SECRET": "express-session-secret",
      "BASE_URL": "@base-url",
      "HRUDB_TOKEN": "@hrudb-token"
    }
  }
}
